{
  "name": "kindle-api",
  "version": "0.1.0",
  "description": "API client for accessing Kindle's unofficial API.",
  "author": "Travis Fischer <travis@transitivebullsh.it>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/transitive-bullshit/kindle-api.git"
  },
  "packageManager": "pnpm@9.11.0",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "del clean",
    "prebuild": "run-s clean",
    "pretest": "run-s build",
    "test": "run-s test:*",
    "test:format": "prettier --check \"**/*.{js,ts,tsx}\"",
    "test:lint": "eslint .",
    "test:typecheck": "tsc --noEmit",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@inquirer/prompts": "^6.0.1",
    "ky": "^1.7.2",
    "p-throttle": "^6.2.0"
  },
  "devDependencies": {
    "@fisch0920/eslint-config": "^1.4.0",
    "@types/node": "^22.4.0",
    "del-cli": "^5.1.0",
    "delay": "^6.0.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "npm-run-all2": "^6.2.2",
    "only-allow": "^1.2.1",
    "playwright": "^1.47.2",
    "playwright-core": "^1.47.2",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "2.1.1"
  }
}
