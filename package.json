{
  "name": "kindle-ai-export",
  "private": true,
  "version": "0.2.0",
  "description": "Export any Kindle book you own as text, PDF, EPUB, or as a custom, AI-narrated audiobook.",
  "author": "Travis Fischer <travis@transitivebullsh.it>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/transitive-bullshit/kindle-ai-export.git"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "scripts": {
    "test": "run-s test:*",
    "test:format": "prettier --check \"**/*.{js,ts,tsx}\"",
    "test:lint": "eslint .",
    "test:typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "dotenv": "^17.2.3",
    "fluent-ffmpeg": "^2.1.3",
    "hash-object": "^5.0.1",
    "hh-mm-ss": "^1.2.0",
    "ky": "^1.12.0",
    "node-id3": "^0.2.6",
    "openai-fetch": "^3.4.2",
    "p-map": "^7.0.3",
    "p-race": "^3.1.0",
    "patchright": "^1.56.1",
    "pdfkit": "^0.15.0",
    "playwright": "^1.56.1",
    "playwright-core": "^1.56.1",
    "sharp": "^0.34.4",
    "sort-keys": "^6.0.0",
    "tar": "^7.5.1",
    "tempy": "^3.1.0",
    "type-fest": "^5.1.0",
    "unrealspeech-api": "^1.0.2"
  },
  "devDependencies": {
    "@fisch0920/config": "^1.3.4",
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/hh-mm-ss": "^1.2.3",
    "@types/node": "^24.9.1",
    "@types/pdfkit": "^0.13.5",
    "del-cli": "^7.0.0",
    "delay": "^6.0.0",
    "eslint": "^9.38.0",
    "lint-staged": "^16.2.5",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "vitest": "3.2.4"
  },
  "prettier": "@fisch0920/config/prettier",
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --ignore-unknown --write",
      "eslint --cache --fix"
    ]
  }
}
